generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:0b78c664efce@cubify-db.chk60ggsgegs.eu-north-1.rds.amazonaws.com:5432/cubify_db"
}

model LocalAccount {
  id       String @id
  user     User   @relation(fields: [id], references: [id])
  email    String @unique
  fullName String
  password String
}

model GoogleAccount {
  id       String  @id
  user     User    @relation(fields: [id], references: [id])
  fullName String
  email    String  @unique
  googleId String  @unique
  avatar   String?
}

model User {
  id                String         @id @default(uuid())
  localAccount      LocalAccount?
  googleAccount     GoogleAccount?
  username          String?        @unique
  verified          Boolean        @default(false)
  verificationToken String         @unique @default(uuid())
  cubes             Cube[]
  likes             Like[]
}

model Cube {
  id              Int      @id @default(autoincrement())
  owner           User     @relation(fields: [ownerId], references: [id])
  ownerId         String
  name            String
  pending         Boolean  @default(true)
  description     String?
  backgroundColor String?
  side1           String?
  side2           String?
  side3           String?
  side4           String?
  side5           String?
  side6           String?
  createdAt       DateTime @default(now())
  Like            Like[]
}

model Like {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  cube   Cube   @relation(fields: [cubeId], references: [id])
  cubeId Int

  @@unique([userId, cubeId])
}

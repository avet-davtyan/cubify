generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@db:5432/cubify"
}

model User {
  id       String             @id
  userAuth UserAuthentication @relation(fields: [id], references: [id])
  email    String             @unique
  fullName String
  password String
}

model GoogleUser {
  id       String             @id
  userAuth UserAuthentication @relation(fields: [id], references: [id])
  fullName String
  email    String             @unique
  googleId String             @unique
  avatar   String?
}

model UserAuthentication {
  id         String      @id @default(uuid())
  simpleUser User?
  googleUser GoogleUser?
  username   String?     @unique
  cubes      Cube[]
  likes      Like[]
}

model Cube {
  id              Int                @id @default(autoincrement())
  owner           UserAuthentication @relation(fields: [ownerId], references: [id])
  ownerId         String
  name            String
  pending         Boolean            @default(true)
  description     String?
  backgroundColor String?
  side1           String?
  side2           String?
  side3           String?
  side4           String?
  side5           String?
  side6           String?
  createdAt       DateTime           @default(now())
  Like            Like[]
}

model Like {
  id     Int                @id @default(autoincrement())
  user   UserAuthentication @relation(fields: [userId], references: [id])
  userId String
  cube   Cube               @relation(fields: [cubeId], references: [id])
  cubeId Int

  @@unique([userId, cubeId])
}
